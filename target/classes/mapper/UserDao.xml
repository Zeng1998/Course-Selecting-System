<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yasin.dao.UserDao">

    <select id="selectStuById" resultType="Student" parameterType="int">
        SELECT * FROM Student WHERE stuId=#{id}
    </select>

    <select id="selectTeaById" resultType="Teacher" parameterType="int">
        SELECT * FROM Teacher WHERE teaId=#{id}
    </select>

    <select id="selectRootById" resultType="Root" parameterType="int">
        SELECT * FROM ROOT WHERE rootId=#{id}
    </select>
    <update id="updateStuPass" parameterType="Student">
        UPDATE Student SET
        stuPass=#{stuPass}
        WHERE stuId=#{stuId}
    </update>

    <update id="updateTeaPass" parameterType="Teacher">
        UPDATE Teacher SET
        teaPass=#{teaPass}
        WHERE teaId=#{teaId}
    </update>

    <update id="updateRootPass" parameterType="Root">
        UPDATE Root SET
    rootPass=#{rootPass}
        WHERE rootId=#{rootId}
    </update>
    <select id="queryAllTeacher" resultType="Teacher">
        SELECT * FROM Teacher
    </select>
    <select id="queryAllStudent" resultType="Student">
        SELECT * FROM student
    </select>

    <insert id="insertStudent">
        INSERT into student (stuId,stuName,stuPass,insId,insName) value (#{stuId},#{stuName},#{stuPass},#{insId},#{insName})
    </insert>

    <insert id="insertTeacher">
        INSERT into Teacher (teaId,teaName,teaPass) value (#{teaId},#{teaName},#{teaPass})
    </insert>

    <delete id="deleteStudentById">
        delete from student where stuId = #{id}
    </delete>

    <delete id="deleteStudentInScoreById">
        delete from course_choose where stuId = #{id}
    </delete>

    <delete id="deleteTeacherById">
        delete from teacher where teaId = #{id}
    </delete>

    <delete id="deleteTeacherInScoreById">
        delete from course where teaId = #{id}
    </delete>

    <update id="updateStu">
        update student set stuName=#{stuName},stuPass=#{stuPass},insId=#{insId},insName=#{insName} where stuId = #{stuId}
    </update>

    <update id="updateTea">
        update teacher set teaName=#{teaName},teaPass=#{teaPass} where teaId=#{teaId}
    </update>

</mapper>